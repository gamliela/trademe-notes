{
  "name": "Trademe Notes",
  "version": "1.0",
  "description": "Make the world better",
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.trademe.nz/*"
      ],
      "js": [
        "trademe_nz_content_script.js"
      ]
    }
  ],
  "manifest_version": 2
}
